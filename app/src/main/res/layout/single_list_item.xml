<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/ic_play_list_imageview"
        android:layout_width="48dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_play"
        tools:ignore="ContentDescription,MissingConstraints,VectorDrawableCompat" />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File name"
        app:layout_constraintStart_toEndOf="@+id/ic_play_list_imageview"
        app:layout_constraintTop_toTopOf="@+id/ic_play_list_imageview" />

    <TextView
        android:id="@+id/list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/ic_play_list_imageview"
        app:layout_constraintStart_toEndOf="@+id/ic_play_list_imageview" />
</androidx.constraintlayout.widget.ConstraintLayout>